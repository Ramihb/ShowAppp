<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundAd"
    tools:context=".Fragment.ProfileFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/profileImage"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_baseline_image_24"
        android:layout_marginStart="50dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/green"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/userName"
        android:gravity="center"
        android:text="name"
        android:textSize="15sp"
        android:textColor="@color/mainText"
        android:layout_marginStart="180dp"
        android:layout_marginTop="60dp"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/userEmail"
        android:gravity="center"
        android:textColor="@color/mainText"
        android:textSize="15sp"
        android:text="email"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="95dp"/>

    <Button
        android:id="@+id/editProfileBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit_profile"
        android:textSize="15sp"
        android:layout_marginTop="125dp"
        android:layout_marginStart="205dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout"
        android:layout_below="@id/editProfileBtn"
        android:layout_marginTop="60dp"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/AllMyOrders"
            android:text="@string/all_my_orders"
            android:textColor="@color/mainText"
            android:textSize="25sp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="15dp"
            android:gravity="center"
            app:drawableStartCompat="@drawable/ic_baseline_control_point_24"
            app:drawableEndCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/FinishedOrders"
            android:text="@string/finished_orders"
            android:textColor="@color/mainText"
            android:textSize="25sp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="15dp"
            android:gravity="center"
            app:drawableStartCompat="@drawable/ic_baseline_control_point_24"
            app:drawableEndCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/InviteFriends"
            android:text="@string/invite_friends"
            android:textColor="@color/mainText"
            android:textSize="25sp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="15dp"
            android:gravity="center"
            app:drawableStartCompat="@drawable/ic_baseline_control_point_24"
            app:drawableEndCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Language"
            android:text="@string/language"
            android:textColor="@color/mainText"
            android:textSize="25sp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="15dp"
            android:gravity="center"
            app:drawableStartCompat="@drawable/ic_baseline_control_point_24"
            app:drawableEndCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ShippingAddress"
            android:text="Shipping address"
            android:textColor="@color/mainText"
            android:textSize="25sp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="15dp"
            android:gravity="center"
            app:drawableStartCompat="@drawable/ic_baseline_control_point_24"
            app:drawableEndCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/LogOutUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:backgroundTint="@color/gris"
        android:gravity="center"
        android:text="@string/logout"
        android:textColor="#FF0000" />

</RelativeLayout>